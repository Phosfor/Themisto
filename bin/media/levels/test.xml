<?xml version="1.0" encoding="UTF-8" ?>

<ThemistoLevel version="0.1" authors="Wincode team" name="First level">
    <World image="levels/test.png" cameraPosX="0" cameraPosY="0">

        <Environ active="true">
            <Rain enabled="true" limit="50" />
            <Clouds enabled="true" limit="20" />
            <!--<Lightnings enabled="true" />-->
            <Sky enabled="true" />
            <Moon enabled="true" />
            <Leaves enabled="true" limit="8" />
            <Stars enabled="true" limit="400" />
            <Birds enabled="true" />
            <!-- actual_size is average real foreground image size refer to full window size -->
            <!-- If fixed is true, foreground wouldn't move with camera and level -->
            <Foreground image="test" actual_size="40" fixed="false" />
            <Wind power="-2" />
        </Environ>

        <Objects>

            <Object name="Level" type="PhysicBodyObject" template="test" />

            <Object name="Ground" type="PhysicBodyObject" z-index="2">
                <Body>
                    <b2Body>
                        <Position>
                            <x>100.0</x>
                            <y>500</y>
                        </Position>
                        <Type>StaticBody</Type>
                    </b2Body>
                    <Part>
                        <Name>GroundPart1</Name>
                        <MaxDampness>10.0</MaxDampness>
                        <b2Fixture>
                            <Friction>0.3</Friction>
                            <Restitution>0.3</Restitution>
                            <Shape>
                                <Type>e_polygon</Type>
                                <Vertices>
                                    <Vertex>
                                        <x>0.0</x>
                                        <y>0.0</y>
                                    </Vertex>
                                    <Vertex>
                                        <x>200.0</x>
                                        <y>0.0</y>
                                    </Vertex>
                            </Shape>
                        </b2Fixture>
                        <Material>
                            <DampReceptivity>1</DampReceptivity>
                        </Material>
                    </Part>
                </Body>
            </Object>
             <Object name="Stone" type="PhysicBodyObject">
                <Visual>
                    <Size width="90" height="90" />
                    <Position x="0" y="0" />
                    <Texture section="Stuff" name="stone" />
                </Visual>
                <Body>
                    <b2Body>
                        <Position>
                            <x>300.0</x>
                            <y>20.0</y>
                        </Position>
                        <Type>StaticBody</Type>
                    </b2Body>
                    <Part>
                        <b2Fixture>
                            <Friction>0.3</Friction>
                            <Restitution>0.3</Restitution>
                            <Density>0.3</Density>
                            <Shape>
                                <Type>e_circle</Type>
                                <Radius>45.0</Radius>
                            </Shape>
                        </b2Fixture>
                    </Part>
                  </Body>
             </Object>

        </Objects>

    </World>
    <Templates>
       <Include>test.tpl</Include>
    </Templates>
</ThemistoLevel>
