<?xml version="1.0" encoding="UTF-8" ?>

<ThemistoLevel version="0.1" authors="Wincode team" name="First level">

    <World image="levels/test.png" cameraPosX="0" cameraPosY="0">

        <Environ active="true">
            <Rain enabled="true" limit="50" />
            <Clouds enabled="true" limit="20" />
            <!--<Lightnings enabled="true" />-->
            <Sky enabled="true" />
            <Moon enabled="true" />
            <Leaves enabled="true" limit="8" />
            <Stars enabled="true" limit="400" />
            <Birds enabled="true" />
            <!-- actual_size is average real foreground image size refer to full window size -->
            <!-- If fixed is true, foreground wouldn't move with camera and level -->
            <Foreground image="test" actual_size="40" fixed="false" />
            <Wind power="-2" />
        </Environ>

        <Objects>

            <Object name="Level" type="PhysicBodyObject" template="test2" />

             <Object name="Stone" type="PhysicBodyObject">
                <Visual>
                    <Size width="90" height="90" />
                    <Texture section="Stuff" name="stone" />
                </Visual>
                <Body>
                    <b2Body>
                        <Position>
                            <x>300.0</x>
                            <y>20.0</y>
                        </Position>
                        <Type>DynamicBody</Type>
                    </b2Body>
                    <Part>
                        <b2Fixture>
                            <Friction>0.3</Friction>
                            <Restitution>0.3</Restitution>
                            <Density>0.3</Density>
                            <Shape>
                                <Type>e_circle</Type>
                                <Radius>45.0</Radius>
                                <Center>
                                    <x>45</x>
                                    <y>45</y>
                                </Center>
                            </Shape>
                        </b2Fixture>
                    </Part>
                  </Body>
             </Object>

        </Objects>

    </World>
    <Templates>
       <Include>test2.tpl</Include>
    </Templates>
</ThemistoLevel>
